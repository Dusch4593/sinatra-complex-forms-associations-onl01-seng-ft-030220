<h1>Create a New Owner</h1>

<form action="/owners" method="POST">
  <label>Name:</label>
  <br>
  <input type="text" name="owner[name]">

  <br>

  <strong><p>Choose an existing pet:</p></strong>

  <% @pets.each do |pet| %>
    <input type="checkbox" name="owner[pet_ids][]" id="<%= pet.id %>" value="<%= pet.id %>"><%= pet.name %>
  <% end %>
  <br><br>

  <strong><p>and/or create a new pet: </p></strong>
  <label>Name:</label><input type="text" name="pet[name]" id="pet_name"></input>
  <br><br>
  <input type="submit" value="Create Owner">
</form>
